<!--swiper6.ui-->
<template>
  <ui-page>
    <ui-view class="demo demo1">
      <ui-divider>纵深效果</ui-divider>
      <ui-ex-swiper pagination centered-slides loop space-between="10">
        <ui-ex-swiper-item ui:for="{{items}}" ui:for-item="item" ui:for-index="index">
          <ui-image src="{{ item.src }}" mode="simple"></ui-image>
        </ui-ex-swiper-item>
      </ui-ex-swiper>
    </ui-view>

    <ui-view class="demo demo2">
      <ui-divider>居中纵深效果</ui-divider>
      <ui-ex-swiper pagination centered-slides loop space-between="10" slides-per-view="auto">
        <ui-ex-swiper-item  ui:for="{{items}}" ui:for-item="item" ui:for-index="index">
          <ui-image src="{{ item.src }}" mode="simple"></ui-image>
        </ui-ex-swiper-item>
      </ui-ex-swiper>
    </ui-view>

    <ui-view class="demo demo3">
      <ui-divider>自定义边界纵深效果</ui-divider>
      <ui-ex-swiper pagination centered-slides loop space-between="5" slides-per-view="auto">
        <ui-ex-swiper-item ui:for="{{items}}" ui:for-item="item" ui:for-index="index">
          <ui-image src="{{ item.src }}" mode="simple"></ui-image>
        </ui-ex-swiper-item>
      </ui-ex-swiper>
    </ui-view>

    <ui-view class="demo demo4" style="margin-bottom:10px;">
      <ui-divider>靠左纵深</ui-divider>
      <ui-ex-swiper pagination loop space-between="10" slides-per-view="auto">
        <ui-ex-swiper-item ui:for="{{items}}" ui:for-item="item" ui:for-index="index">
          <ui-image src="{{ item.src }}" mode="simple"></ui-image>
        </ui-ex-swiper-item>
      </ui-ex-swiper>
    </ui-view>

    <ui-view class="demo5">
      <ui-divider>一行多个纵深效果</ui-divider>
      <ui-blur url="{{ url }}">
        <ui-ex-swiper centered-slides slides-per-view="4" index="{{ index }}" bindinit="init" bindchange="handleSwiperChange" binditemtap="handleChangeSlide">
          <ui-ex-swiper-item ui:for="{{items2}}" ui:for-item="item" ui:for-index="index">
            <ui-image src="{{ item.src }}" mode="simple"></ui-image>
          </ui-ex-swiper-item>
        </ui-ex-swiper>
      </ui-blur>
    <ui-view class="current">
      <ui-view class="desc">
        <span class="name">
          {{ items2[index].title }}
        </span>
        <span class="score">
          <span class="number">
            {{ items2[index].score }}
          </span>
          <span class="text">
            分
          </span>
        </span>
      </ui-view>
    </ui-view>
    </ui-view>
  </ui-page>
</template>

