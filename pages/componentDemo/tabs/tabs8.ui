                <ui-view>
                  <ui-icon name="map" size="14" color="#333"></ui-icon>北京市 丰台区
                </ui-view>
              </ui-col>
              <ui-col vertical-align="middle" align="right" width="20">
                <ui-icon name="arrow-right" color="#6D6D6D" size="15"></ui-icon>
              </ui-col>
            </ui-row>
            <ui-row height="40">
              <ui-col vertical-align="middle" align="middle">
                <ui-view>
