              </ui-view>
            </ui-scroll-view>
          </ui-view>
          <ui-view class="bottom_tip">↑上拉显示详情页</ui-view>
        </ui-view>
      </ui-swiper-item>
      <ui-swiper-item >
        <ui-row height="46">
          <ui-col vertical-align="middle" align="center">
            <ui-view class="tabs_wrap">
              <ui-tabs class="type-common" index="{{ current2 }}" bindchange="handleChange($event, 'current2')">
                <ui-tab>
                  <ui-view class="item-list">
                      <ui-view class="">商品</ui-view>
                      <ui-view class="tab-line"></ui-view>
                  </ui-view>
                </ui-tab>
