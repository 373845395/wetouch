                    <ui-row height="30" class="bottom">
                      <ui-col vertical-align="middle" align="left">
                        {{ item.size }}
                      </ui-col>
                      <ui-col vertical-align="middle" align="right">
                        {{ item.time }}
                      </ui-col>
                    </ui-row>
                  </ui-view>

                </ui-view>
