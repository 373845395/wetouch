              </ui-view>
            </ui-col>
            <ui-col vertical-align="middle" align="right" width="20">
              <ui-view>
                <ui-icon name="arrow-right" color="#6D6D6D" size="15"></ui-icon>
              </ui-view>
            </ui-col>
          </ui-row>

          <ui-row-list border-left-indent bordered class="choice">
            <ui-row height="40">
