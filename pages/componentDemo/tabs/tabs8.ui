                  <ui-image
                  src="{{ item.src }}"
                  width="100%"
                  ></ui-image>
                  <ui-view class="info">
                    <ui-text block>{{ item.name }}</ui-text>
                    <ui-view>{{ item.price }}</ui-view>
                  </ui-view>
