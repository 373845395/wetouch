<!--audio.ui-->
<template>
  <ui-page>
    <ui-view class="sample_title">使用全局播放API</ui-view>
    <ui-view class="sample_content">
      <ui-button type="primary" bindtap="getBackgroundAudioPlayerState">获取后台音乐播放状态</ui-button>
      <ui-button type="primary" bindtap="playBackgroundAudio">使用后台播放器播放音乐</ui-button>
      <ui-button type="primary" bindtap="pauseBackgroundAudio">暂停播放音乐</ui-button>
      <ui-button type="primary" bindtap="seekBackgroundAudio">控制音乐播放进度</ui-button>
      <ui-button type="primary" bindtap="stopBackgroundAudio">停止播放音乐</ui-button>
    </ui-view>

    <ui-view class="sample_title">播放状态：</ui-view>
    <ui-view class="sample_content">
        <ui-text>{{state}}</ui-text>
    </ui-view>    

    <ui-view class="sample_title">使用背景音频播放管理API</ui-view>
    <ui-view class="sample_content">
      <ui-button type="primary" bindtap="getBackgroundAudioManager">打印播放信息</ui-button>
      <ui-button type="primary" bindtap="play">播放音乐</ui-button>
      <ui-button type="primary" bindtap="pause">暂停播放音乐</ui-button>
      <ui-button type="primary" bindtap="seek">设置音乐播放进度</ui-button>
      <ui-button type="primary" bindtap="stop">停止播放音乐</ui-button>
      <ui-button type="primary" bindtap="setInfo">播放新音乐</ui-button>
      
    </ui-view>

    <ui-view class="sample_title">播放信息：</ui-view>
    <ui-view class="sample_content">
        <ui-text>{{info}}</ui-text>
    </ui-view>
  </ui-page>
</template>
