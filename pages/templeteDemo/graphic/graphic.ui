<!--chart.ui-->
<template>
  <ui-page>
    <ui-view class="wrap">
      <ui-view class="title">城市选择</ui-view>
      <ui-tags data="{{cityList}}" bindchange="singleTap"></ui-tags>
    </ui-view>
    <ui-view class="wrap">
      <ui-view class="title">受众性别占比</ui-view>
      <ui-row height="30" class="proportion_text">
