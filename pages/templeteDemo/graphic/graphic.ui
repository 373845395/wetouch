          </ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="right">
          <ui-view class="right right2">
            <ui-text>本科以下</ui-text>71.3%
          </ui-view>
        </ui-col>
      </ui-row>
      <ui-contrast
      value="{{ contrastValue2 }}"
      color="{{ colorArry2 }}"
      gap="true"
      height="10"
      ></ui-contrast>
    </ui-view>


    <ui-view class="wrap">
      <ui-view class="title">活跃地区</ui-view>
